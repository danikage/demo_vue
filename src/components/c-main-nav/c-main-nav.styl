.c-main-nav
	background-color #cbecfb
	box-shadow inset -0.1em 0 0 0 rgba(0, 0, 0, 0.5)
	padding-right 0.2em
	&__title
		color #000
		font-size 2em
	&__menu
		display block
	&__menu-item
		display block
		padding .5em .5em .5em 2em
		text-align left
	&__link
		color #2eab72
		font-weight 600
		&:hover
			color #21523c
		&.router-link-exact-active
			text-decoration none
			cursor default
			&:hover
				color #2eab72